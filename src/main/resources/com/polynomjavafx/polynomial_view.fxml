<?xml version="1.0" encoding="UTF-8"?>

<?import com.polynomjavafx.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<AnchorPane  prefHeight="450" prefWidth="1064.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polynomjavafx.PolynomialController" >
    <VBox alignment="TOP_CENTER" layoutY="-2.0" prefHeight="300" prefWidth="1064.0" spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar prefHeight="12.0" prefWidth="974.0">
            <Menu mnemonicParsing="false" text="Anzeige">

                <RadioMenuItem fx:id="axisToggleMenuItem" mnemonicParsing="false" text="Achsen">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </RadioMenuItem>

                <RadioMenuItem fx:id="gridToggleMenuItem" mnemonicParsing="false" text="Gitter">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </RadioMenuItem>

                <RadioMenuItem fx:id="axisScalesMenuItemToggle" mnemonicParsing="false" text="Achsenbeschriftung">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </RadioMenuItem>

                <MenuItem fx:id="returnToOriginMenuItem" mnemonicParsing="false" onAction="#returnToOrigin" text="Zurück zum Ursprung">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>

                <MenuItem mnemonicParsing="false" onAction="#resetScaling" text="Skalierung zurücksetzen">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>

                <Menu mnemonicParsing="false" text="Punktauswahl Modus">
                    <RadioMenuItem fx:id="polynomialPoints" selected="true" text="Polynom">

                    </RadioMenuItem>
                    <RadioMenuItem fx:id="canvasPoints" text="Canvas">
                    </RadioMenuItem>
                </Menu>

            </Menu>
        </MenuBar>

        <HBox fx:id="infoHbox" prefHeight="494.0" prefWidth="1136.0">
            <VBox alignment="CENTER" prefHeight="545.0" prefWidth="539.0">
                <GridPane alignment="CENTER" prefHeight="350.0" prefWidth="481.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <AnchorPane GridPane.columnSpan="2">
                    <Button onAction="#addPolynomial" text="Create Polynomial" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                    </AnchorPane>
                    <Label alignment="TOP_LEFT" snapToPixel="false" text="Funktion:" GridPane.rowIndex="1" />
                    <Label contentDisplay="CENTER" text="Symmetirien:" GridPane.rowIndex="2" />
                    <Label text="Grad der Funktion" GridPane.rowIndex="3" />
                    <Label text="y-Achsenabschnitt" GridPane.rowIndex="4" />
                    <Label text="Nullstellen:" GridPane.rowIndex="5" />
                    <Label text="Extremstellen: " GridPane.rowIndex="6" />
                    <Label text="Wendepunkte: " GridPane.rowIndex="7" />
                    <Label text="Sattelpunkte:" GridPane.rowIndex="8" />

                    <!-- Integral -->
                    <Label text="Integral:" GridPane.rowIndex="9" />
                    <!-- Text fields for input for integral -->
                    <TextField fx:id="integralTextField1" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                    <TextField fx:id="integralTextField2" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                    <!--ChoiceBox for Polynomials-->
                    <ChoiceBox fx:id="polynomialsCB" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label fx:id="symmetryLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="degreeLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label fx:id="rootLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label fx:id="extremaLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label fx:id="inflectionLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <Label fx:id="saddleLabel" prefWidth="300" GridPane.ColumnIndex="1" GridPane.rowIndex="7" />
                    <Label fx:id="integralLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                </GridPane>



            <ChoiceBox fx:id="scaleChoicebox" prefHeight="34.0" prefWidth="150.0" />
                <Button mnemonicParsing="false" onAction="#onResetButtonClicked" prefHeight="25.0" prefWidth="180.0" text="Reset" />
            </VBox>
            <MathCanvas fx:id="mathCanvas" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" onMouseClicked="#onMouseClickedOnCanvas" onScroll="#onMouseScrolledOnCanvas" prefHeight="500.0" prefWidth="500.0" />
        </HBox>
    </VBox>
</AnchorPane>
