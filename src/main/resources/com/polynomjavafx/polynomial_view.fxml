<?xml version="1.0" encoding="UTF-8"?>

<?import com.polynomjavafx.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="606.0" prefWidth="926.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polynomjavafx.PolynomialController">
    <VBox alignment="CENTER" layoutY="-2.0" prefHeight="482.0" prefWidth="1057.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar>
            <Menu mnemonicParsing="false" text="Anzeige">
                <RadioMenuItem fx:id="gridToggleMenuItem" mnemonicParsing="false" text="Gitter">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </RadioMenuItem>
                <RadioMenuItem fx:id="axisToggleMenuItem" mnemonicParsing="false" text="Achsen">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </RadioMenuItem>
                <RadioMenuItem fx:id="axisScalesMenuItemToggle" mnemonicParsing="false" text="Achsenbeschriftung">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </RadioMenuItem>
                <MenuItem fx:id="returnToOriginMenuItem" mnemonicParsing="false" onAction="#returnToOrigin"
                          text="Zurück zum Ursprung">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#resetScaling" text="Skalierung zurücksetzen">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
            </Menu>
        </MenuBar>
        <HBox alignment="CENTER" prefHeight="64.0" prefWidth="622.0" spacing="20.0">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <Label prefHeight="25.0" prefWidth="48.0" text="f(x) =" />
            <Spinner fx:id="coefficient5Spinner" editable="true" prefWidth="80.0" />
            <Label text=" x⁵+" />
            <Spinner fx:id="coefficient4Spinner" editable="true" prefWidth="80.0" />
            <Label text=" x⁴ +" />
            <Spinner fx:id="coefficient3Spinner" editable="true" prefWidth="80.0" />
            <Label text=" x³ +" />
            <Spinner fx:id="coefficient2Spinner" editable="true" prefWidth="80.0" />
            <Label text=" x² +" />
            <Spinner fx:id="coefficient1Spinner" editable="true" prefWidth="80.0" />
            <Label text="x +" />
            <Spinner fx:id="coefficient0Spinner" editable="true" prefWidth="80.0" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onSubmitButtonClicked" text="Ok" />
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Label fx:id="inputWarningLabel" text="Ungültige Eingabe" textFill="RED" visible="false" />
        </HBox>

        <HBox fx:id="infoHbox" prefHeight="407.0" prefWidth="926.0">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="539.0">
                <GridPane alignment="CENTER" prefHeight="350.0" prefWidth="481.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Label alignment="TOP_LEFT" snapToPixel="false" text="Funktion:" />
                    <Label contentDisplay="CENTER" text="Symmetirien:" GridPane.rowIndex="1" />
                    <Label text="Grad der Funktion" GridPane.rowIndex="2" />
                    <Label text="y-Achsenabschnitt" GridPane.rowIndex="3" />
                    <Label text="Nullstellen:" GridPane.rowIndex="4" />
                    <Label text="Extremstellen: " GridPane.rowIndex="5" />
                    <Label text="Wendepunkte: " GridPane.rowIndex="6" />
                    <Label text="Sattelpunkte:" GridPane.rowIndex="7" />
                    <Label text="Integral:" GridPane.rowIndex="8" />
                    <Label fx:id="functionAsStringLabel" GridPane.columnIndex="1" />
                    <Label fx:id="symmetryLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label fx:id="degreeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="rootLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label fx:id="extremaLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label fx:id="inflectionLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <Label fx:id="saddleLabel" prefWidth="300" GridPane.ColumnIndex="1" GridPane.rowIndex="7" />
                    <Label fx:id="integralLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                </GridPane>
            <ChoiceBox fx:id="scaleChoicebox" prefHeight="34.0" prefWidth="150.0" />
                <Button mnemonicParsing="false" onAction="#onResetButtonClicked" prefHeight="25.0" prefWidth="180.0" text="Reset" />
            </VBox>
            <MathCanvas fx:id="mathCanvas" maxHeight="590.0" maxWidth="590.0" minHeight="590.0" minWidth="590.0" onScroll="#onMouseScrolledOnCanvas" prefHeight="590.0" prefWidth="590.0" />
        </HBox>
    </VBox>
</AnchorPane>
