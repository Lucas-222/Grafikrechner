<?xml version="1.0" encoding="UTF-8"?>

<?import com.polynomjavafx.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="606.0" prefWidth="1064.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polynomjavafx.PolynomialController">
   <top>
          <VBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="1039.0" spacing="5.0" BorderPane.alignment="CENTER">
              <MenuBar prefHeight="12.0" prefWidth="974.0">
                  <Menu mnemonicParsing="false" text="Anzeige">

                      <RadioMenuItem fx:id="axisToggleMenuItem" mnemonicParsing="false" text="Achsen">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                          </accelerator>
                      </RadioMenuItem>

                      <RadioMenuItem fx:id="gridToggleMenuItem" mnemonicParsing="false" text="Gitter">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                          </accelerator>
                      </RadioMenuItem>

                      <RadioMenuItem fx:id="axisScalesMenuItemToggle" mnemonicParsing="false" text="Achsenbeschriftung">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                          </accelerator>
                      </RadioMenuItem>

                      <MenuItem fx:id="returnToOriginMenuItem" mnemonicParsing="false" onAction="#returnToOrigin" text="Zurück zum Ursprung">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                          </accelerator>
                      </MenuItem>

                      <MenuItem mnemonicParsing="false" onAction="#resetScaling" text="Skalierung zurücksetzen">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                          </accelerator>
                      </MenuItem>

                      <Menu mnemonicParsing="false" text="Punktauswahl Modus">
                          <RadioMenuItem fx:id="polynomialPoints" selected="true" text="Polynom">

                    </RadioMenuItem>
                    <RadioMenuItem fx:id="canvasPoints" text="Canvas">
                    </RadioMenuItem>
                </Menu>
            </Menu>
        </MenuBar>
          </VBox>

   </top>
    <left>
        <HBox fx:id="infoHbox" fillHeight="false" maxHeight="Infinity" prefHeight="Infinity" prefWidth="281.0">
            <VBox alignment="CENTER" maxHeight="Infinity" prefHeight="Infinity" prefWidth="539.0">
                <GridPane alignment="CENTER" maxHeight="Infinity" prefWidth="481.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints prefHeight="30.0" />
                  <RowConstraints />
                  <RowConstraints minHeight="10.0" />
                  <RowConstraints minHeight="10.0" />
                    </rowConstraints>
                    <AnchorPane GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER">
                    <Button onAction="#addPolynomial" text="Create Polynomial" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                    </AnchorPane>
                    <Label alignment="TOP_LEFT" snapToPixel="false" text="Funktion:" GridPane.rowIndex="1" />
                    <Label contentDisplay="CENTER" text="Symmetirien:" GridPane.rowIndex="2" />
                    <Label text="Grad der Funktion" GridPane.rowIndex="3" />
                    <Label text="y-Achsenabschnitt" GridPane.rowIndex="4" />
                    <Label text="Nullstellen:" GridPane.rowIndex="5" />
                    <Label text="Extremstellen: " GridPane.rowIndex="6" />
                    <Label text="Wendepunkte: " GridPane.rowIndex="7" />
                    <Label text="Sattelpunkte:" GridPane.rowIndex="8" />


                    <!--ChoiceBox for Polynomials-->
                    <ChoiceBox fx:id="polynomialsCB" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label fx:id="symmetryLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="degreeLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label fx:id="rootLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label fx:id="extremaLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label fx:id="inflectionLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <Label fx:id="saddleLabel" prefWidth="300" GridPane.ColumnIndex="1" GridPane.rowIndex="7" />
                    <Label fx:id="integralLabel" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                    <!-- Integral -->
                    <Label text="Integral:" GridPane.rowIndex="9" />
                    <HBox GridPane.columnSpan="2" GridPane.rowIndex="10">
                        <TextField fx:id="integralTextField2" />
                        <!-- Text fields for input for integral -->
                        <TextField fx:id="integralTextField1" />
                    </HBox>
                     <ChoiceBox fx:id="scaleChoicebox" prefWidth="300" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="11" />
                     <Button mnemonicParsing="false" onAction="#onResetButtonClicked" prefWidth="300" text="Reset" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="12" />

                </GridPane>
            </VBox>
        </HBox>
   </left>
   <center>
       <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <MathCanvas fx:id="mathCanvas" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" onMouseClicked="#onMouseClickedOnCanvas" onScroll="#onMouseScrolledOnCanvas" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
           </VBox>
       </HBox>
   </center>
